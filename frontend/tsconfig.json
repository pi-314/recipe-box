{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "Bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@spartan-ng/ui-alert-helm": [
        "./libs/spartan/ui-alert-helm/src/index.ts"
      ],
      "@spartan-ng/ui-badge-helm": [
        "./libs/spartan/ui-badge-helm/src/index.ts"
      ],
      "@spartan-ng/ui-button-helm": [
        "./libs/spartan/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-command-helm": [
        "./libs/spartan/ui-command-helm/src/index.ts"
      ],
      "@spartan-ng/ui-formfield-helm": [
        "./libs/spartan/ui-formfield-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./libs/spartan/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "./libs/spartan/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./libs/spartan/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-pagination-helm": [
        "./libs/spartan/ui-pagination-helm/src/index.ts"
      ],
      "@spartan-ng/ui-popover-helm": [
        "./libs/spartan/ui-popover-helm/src/index.ts"
      ],
      "@spartan-ng/ui-scrollarea-helm": [
        "./libs/spartan/ui-scrollarea-helm/src/index.ts"
      ],
      "@spartan-ng/ui-sonner-helm": [
        "./libs/spartan/ui-sonner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-tooltip-helm": [
        "./libs/spartan/ui-tooltip-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
